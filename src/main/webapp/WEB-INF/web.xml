<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LiuJunwei</servlet-name>
        <servlet-class>com.LiuJunwei.week2.demo.HelloWorldServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LiuJunwei</servlet-name>
        <url-pattern>/helloLJW</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LifeCycleServlet</servlet-name>
        <servlet-class>com.LiuJunwei.week3.demo.LifeCycleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.LiuJunwei.week3.demo.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JDBCemoServlet</servlet-name>
        <servlet-class>com.LiuJunwei.wee4.JDBCemoServlet</servlet-class>
        <init-param>
            <param-name>driver</param-name>
            <param-value>com.microsoft.sqlserver.jdbc.SQLServerDriver</param-value>
        </init-param>
        <init-param>
            <param-name>url</param-name>
            <param-value>jdbc:sqlserver://Localhost:1433;database=userdb;encrypt=false</param-value>
        </init-param>
        <init-param>
            <param-name>username</param-name>
            <param-value>sa</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>admin123456789</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ConfigDemoServlet</servlet-name>
        <servlet-class>com.LiuJunwei.wee4.ConfigDemoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfigDemoServlet</servlet-name>
        <url-pattern>/config</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LifeCycleServlet</servlet-name>
        <url-pattern>/life</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JDBCemoServlet</servlet-name>
        <url-pattern>/jdbc</url-pattern>
    </servlet-mapping>
</web-app>